}

/** Equality expression. */
void EqualityExpression() #void :
{}
{
  RelationalExpression()
  (
     "==" RelationalExpression() #EQNode(3)
   |
     "!=" RelationalExpression() #NENode(3)
  )*
}

INJECT(EQNode) : {}
{
